<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>uploadDirectory</param-name>
        <param-value>/opt/tomcat/profilePictures</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>tender.servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>tender.servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>tender.servlets.MyProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>tender.servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nextpage</servlet-name>
        <servlet-class>tender.servlets.nextpage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>notLoggedIn</servlet-name>
        <servlet-class>tender.servlets.notLoggedIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>tender.servlets.upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>palette</servlet-name>
        <servlet-class>tender.servlets.palette</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>restaurantSelection</servlet-name>
        <servlet-class>tender.servlets.restaurantSelection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>friendsList</servlet-name>
        <servlet-class>tender.servlets.addFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendsList</servlet-name>
        <servlet-class>tender.servlets.FriendsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addFriend</servlet-name>
        <servlet-class>tender.servlets.addFriend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nextpage</servlet-name>
        <url-pattern>/nextpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notLoggedIn</servlet-name>
        <url-pattern>/notLoggedIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>palette</servlet-name>
        <url-pattern>/palette</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>restaurantSelection</servlet-name>
        <url-pattern>/restaurantSelection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>friendsList</servlet-name>
        <url-pattern>/friendsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FriendsList</servlet-name>
        <url-pattern>/FriendsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addFriend</servlet-name>
        <url-pattern>/addFriend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
